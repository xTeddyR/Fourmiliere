<UserControl x:Class="FourmilliereAL.TimeItemControle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FourmilliereAL"
             mc:Ignorable="d" 
             MaxHeight="40"
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid Background="{StaticResource BackgroundVeryLightBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="pack://application:,,,/Resources/timer.png"  Margin="5"/>
        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{Binding Heure, Converter={local:ConvertisseurHeureVersHeureFormatter}, StringFormat=' {0} : '}"/>
            <TextBlock Text="{Binding Minute, Converter={local:ConvertisseurHeureVersHeureFormatter}}"/>
        </StackPanel>

    </Grid>
</UserControl>
